{
  "name": "degl",
  "version": "0.0.0",
  "description": "A reimplementation of the WebGL API on top of WebGPU, allowing for gradual migration into the future of 3d on the web",
  "author": "Iwo Plaza (https://iwoplaza.dev)",
  "license": "MIT",
  "type": "module",
  "exports": {
    "./webgl": "./src/webgl/index.ts",
    "./webgl2": "./src/webgl2/index.ts"
  },
  "publishConfig": {
    "exports": {
      "./webgl": {
        "import": "./dist/webgl/index.js",
        "types": "./dist/webgl/index.d.ts"
      },
      "./webgl2": {
        "import": "./dist/webgl2/index.js",
        "types": "./dist/webgl2/index.d.ts"
      }
    }
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown src/webgl/index.ts src/webgl2/index.ts --dts"
  },
  "devDependencies": {
    "@webgpu/types": "^0.1.64",
    "tsdown": "^0.14.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@iwoplaza/shaderkit": "^0.5.0"
  }
}
